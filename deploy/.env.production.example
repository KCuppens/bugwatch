# =============================================================================
# Bugwatch Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your values
# IMPORTANT: Never commit .env.production to version control!
#
# Generate secure values:
#   Password: openssl rand -base64 32 | tr -d '\n/+='
#   JWT Secret: openssl rand -base64 64

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
DOMAIN=bugwatch.example.com
ADMIN_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=bugwatch
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
POSTGRES_DB=bugwatch
# DATABASE_URL is auto-generated from above values

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
SERVER_ADDR=0.0.0.0:3000
ENVIRONMENT=production
RUST_LOG=info

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_64_BYTE_SECRET
JWT_ACCESS_EXPIRATION=900
JWT_REFRESH_EXPIRATION=604800

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=https://bugwatch.example.com/api

# -----------------------------------------------------------------------------
# AI Integration (Optional - for AI Fix feature)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# GitHub Integration (Optional)
# -----------------------------------------------------------------------------
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# AWS SES Email (Optional - for notifications)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
FROM_EMAIL=

# -----------------------------------------------------------------------------
# Stripe Billing (Optional - for paid features)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_PRO_MONTHLY=
STRIPE_PRICE_ID_PRO_ANNUAL=
STRIPE_PRICE_ID_TEAM_MONTHLY=
STRIPE_PRICE_ID_TEAM_ANNUAL=

# -----------------------------------------------------------------------------
# Backup Configuration
# -----------------------------------------------------------------------------
BACKUP_RETENTION_DAYS=7
# Optional: S3 backup storage
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=
