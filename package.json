{
  "name": "bugwatch",
  "version": "0.1.0",
  "private": true,
  "description": "AI-Powered Error Tracking - Watch your bugs. Fix them faster.",
  "repository": {
    "type": "git",
    "url": "https://github.com/KCuppens/bugwatch.git"
  },
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/sdk/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.16",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "packageManager": "npm@10.8.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
