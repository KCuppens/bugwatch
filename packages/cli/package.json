{
  "name": "@bugwatch/cli",
  "version": "0.1.0",
  "description": "CLI tool for setting up Bugwatch in your project",
  "bin": {
    "bugwatch": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "enquirer": "^2.4.1",
    "ora": "^8.0.0",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bugwatch/bugwatch.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "keywords": [
    "bugwatch",
    "cli",
    "error-tracking",
    "setup"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
