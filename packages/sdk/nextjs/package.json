{
  "name": "@bugwatch/nextjs",
  "version": "0.1.1",
  "description": "Bugwatch SDK for Next.js applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client.mjs",
      "require": "./dist/client.js",
      "types": "./dist/client.d.ts"
    },
    "./auto": {
      "import": "./dist/auto.mjs",
      "require": "./dist/auto.js",
      "types": "./dist/auto.d.ts"
    },
    "./instrumentation": {
      "import": "./dist/instrumentation.mjs",
      "require": "./dist/instrumentation.js",
      "types": "./dist/instrumentation.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware.mjs",
      "require": "./dist/middleware.js",
      "types": "./dist/middleware.d.ts"
    },
    "./error-components": {
      "import": "./dist/error-components.mjs",
      "require": "./dist/error-components.js",
      "types": "./dist/error-components.d.ts"
    },
    "./config": {
      "import": "./dist/config.mjs",
      "require": "./dist/config.js",
      "types": "./dist/config.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@bugwatch/core": "*",
    "@bugwatch/node": "*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "next": "^14.0.0 || ^15.0.0",
    "react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bugwatch/bugwatch.git",
    "directory": "packages/sdk/nextjs"
  },
  "license": "MIT",
  "keywords": [
    "bugwatch",
    "error-tracking",
    "monitoring",
    "nextjs",
    "next",
    "react",
    "sdk"
  ]
}
