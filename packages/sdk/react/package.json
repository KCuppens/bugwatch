{
  "name": "@bugwatch/react",
  "version": "0.1.0",
  "description": "Bugwatch SDK for React applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@bugwatch/core": "*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^19.0.2",
    "jsdom": "^27.4.0",
    "react": "^18.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bugwatch/bugwatch.git",
    "directory": "packages/sdk/react"
  },
  "license": "MIT",
  "keywords": [
    "bugwatch",
    "error-tracking",
    "monitoring",
    "react",
    "sdk"
  ]
}
